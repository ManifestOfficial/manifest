{
  "name": "manifest",
  "version": "4.0.0-alpha.8",
  "description": "Effortless backends",
  "author": "Manifest",
  "license": "MIT",
  "homepage": "https://manifest.build",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mnfst/manifest.git"
  },
  "bugs": {
    "url": "https://github.com/mnfst/manifest/issues"
  },
  "keywords": [
    "manifest",
    "backend",
    "backend-as-a-service",
    "bass",
    "api",
    "rest"
  ],
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nodemon",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "seed": "node dist/seed/seed.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:ci": "jest --ci",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./e2e/jest-e2e.json",
    "test:e2e:ci": "jest --config ./e2e/jest-e2e.json --ci",
    "generate-types": "ts-node src/manifest/json-schema/GenerateTypes.ts",
    "prebuild": "npm run generate-types"
  },
  "files": [
    "/dist",
    "scripts",
    "README.md"
  ],
  "dependencies": {
    "@faker-js/faker": "^8.4.1",
    "@mnfst/admin": "^0.1.0-alpha.4",
    "@mnfst/types": "^0.1.0-alpha.3",
    "@nestjs/common": "^10.3.3",
    "@nestjs/config": "^3.2.0",
    "@nestjs/core": "^10.3.3",
    "@nestjs/platform-express": "^10.3.3",
    "@nestjs/swagger": "^7.3.1",
    "@nestjs/typeorm": "^10.0.2",
    "ajv": "^8.12.0",
    "better-sqlite3": "^9.6.0",
    "chalk": "^4.1.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cli-table": "^0.3.11",
    "connect-livereload": "^0.6.1",
    "crypto-js": "^4.2.0",
    "dasherize": "^2.0.0",
    "fs": "^0.0.1-security",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "livereload": "^0.9.3",
    "nodemon": "^3.1.0",
    "path": "^0.12.7",
    "pluralize": "^8.0.0",
    "reflect-metadata": "^0.2.1",
    "rxjs": "^7.8.1",
    "slugify": "^1.6.6",
    "typeorm": "^0.3.20",
    "url": "^0.11.3"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.3.2",
    "@nestjs/schematics": "^10.1.1",
    "@nestjs/testing": "^10.3.3",
    "@types/ajv": "^1.0.0",
    "@types/dasherize": "^2.0.3",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.11.24",
    "@types/pluralize": "^0.0.33",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "json-schema-to-typescript": "^13.1.2",
    "prettier": "^3.2.5",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
